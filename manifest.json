{
    "manifest_version": 3,
    "name": "EXten",
    "version": "1.1.10",
    "permissions": [
      "cookies",        
      "scripting",      
      "activeTab",      
      "storage",
      "identity"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "dist/background.js" 
    },
    "content_scripts": [
      {
        "matches": [
          "http://*/*",
          "https://*/*",
          "https://metabase.minusx.ai/*"],
        "js": ["dist/content.js"]
      }
    ],
    "action": {
      "default_title": "Metabase Injector",
      "default_popup": "dist/popup.html",
      "default_icon": {
      "16": "public/icon.png",
      "48": "public/icon.png",
      "128": "public/icon.png"
  }
    }
  }
  