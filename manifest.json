{
    "manifest_version": 3,
    "name": "Metabase Session Injector",
    "version": "1.1.9",
    "permissions": [
      "cookies",        
      "scripting",      
      "activeTab",      
      "storage"          
    ],
    "host_permissions": [
      "https://metabase.minusx.ai/*"
    ],
    "background": {
      "service_worker": "dist/background.js" 
    },
    "content_scripts": [
      {
        "matches": ["https://metabase.minusx.ai/*"],
        "js": ["dist/content.js"]
      }
    ],
    "action": {
      "default_title": "Metabase Injector",
      "default_popup": "./src/popup.html",
      "default_icon": {
      "16": "public/icon.png",
      "48": "public/icon.png",
      "128": "public/icon.png"
  }
    }
  }
  